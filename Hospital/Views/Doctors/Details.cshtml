                    </div>
                    <div class="row">
                        <div class="col-lg-7">Sâmbătă</div>
                        <div class="col-lg-5 text-right">liber</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-7">Duminică</div>
                        <div class="col-lg-5 text-right">liber</div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <h2><b>@Html.DisplayFor(model => model.NameSurName)</b></h2>
            <div class="col-lg-6">
                <br />
                <h4>
                    <b>@Html.DisplayNameFor(model => model.Age)</b>
                </h4>

                <h4>
                    @Html.DisplayFor(model => model.Age)
                </h4>
                <br />
                <h4>
                    <b>@Html.DisplayNameFor(model => model.Gender) </ b >
                </h4>
                <h4>
                    @Html.DisplayFor(model => model.Gender)
                </h4>
                <br />
                <h4>
                    <b>@Html.DisplayNameFor(model => model.PhoneNumber)</b>
                </h4>
                <h4>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </h4>
                </br>
                <h4>
                    <b>@Html.DisplayNameFor(model => model.Email)</b>
                </h4>
                <h4>
                    @Html.DisplayFor(model => model.Email)
                </h4>
            </div>
            <div class="col-lg-6">
                <br />
                <h4>
                    <b>@Html.DisplayNameFor(model => model.Specialty)</b>
                </h4>
                <h4>
                    @Html.DisplayFor(model => model.Specialty)
                </h4>
                </br>
                <h4>
                    <b> @Html.DisplayNameFor(model => model.Hospital)</b>
                </h4>
                <h4>
                    @Html.DisplayFor(model => model.Hospital)
                </h4>
                </br>
                <h4>
                    <b>
                        @Html.DisplayNameFor(model => model.Description)
                    </b>
                </h4>
                <h4>
                    @Html.DisplayFor(model => model.Description)
                </h4>
            </div>
        </div>
    </div>
    <p style="float:right">

        @if (User.IsInRole("Administrator"))
        {
            <br />
            <button class="btn btn-default btn-lg">
                @Html.ActionLink("Editare", "Edit", new { id = Model.Id }, new { @style = "text-decoration:none;color:black" })
            </button> <span>&nbsp;&nbsp;</span>
        }
        <br />
        <br />
    </p>

</div>