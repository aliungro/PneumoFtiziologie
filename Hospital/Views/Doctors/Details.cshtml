@model Hospital.Models.Doctor
@{
    ViewBag.Title = "Profil doctor";
}

<div>
    <br />
    <br />
    <div class="row">
        <div class="col-lg-6" style="margin-top:20px">
            <img src="@Model.ImageUrl" alt="Image of the doctor" width="550" height="400" />
            <br />
            <br />
            @if (User.IsInRole("Patient"))
            {
                <button class="btn" style="text-decoration:none;margin-left:28%">   @Html.ActionLink("Programați o consultație", "Create", "Appointments", new { id = Model.Id }, new { id = Model.Id, @style = "text-decoration:none" }) </button>
            }
            <br />
            <br />

            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel-icon"><span class="glyphicon glyphicon-time">  Orar</span></div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-body">
                    <div class="row">
